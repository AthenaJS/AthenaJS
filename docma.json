{
    "debug": true,
    "jsdoc": {
        "encoding": "utf8",
        "recurse": true,
        "pedantic": false,
        "access": null,
        "package": null,
        "module": true,
        "undocumented": false,
        "undescribed": true,
        "ignored": false,
        "hierarchy": true,
        "sort": "alphabetic",
        "relativePath": null,
        "filter": null,
        "allowUnknownTags": true,
        "plugins": []
    },
    "markdown": {
        "gfm": true,
        "tables": true,
        "breaks": false,
        "pedantic": false,
        "sanitize": false,
        "smartLists": true,
        "smartypants": false,
        "tasks": true,
        "emoji": true
    },
    "app": {
        "title": "AthenaJS Documentation",
        "meta": null,
        "entrance": "content:home",
        "routing": "query",
        "server": "github"
    },
    "template": {
        "path": "./docma-template",
        "options": {
            "title": "AthenaJS",
            "sidebar": true,
            "collapsed": false,
            "outline": "tree",
            "badges": true,
            "symbolMeta": true,
            "collapseSymbols": true,
            "collapseDefinition": true,
            "search": true,
             "navbar": true,
             "navItems": [
                 {
                     "iconClass": "fas fa-home",
                     "label": "Home",
                     "href": "./"
                 },
                 {
                     "iconClass": "fas fa-list",
                     "label": "API",
                     "items": [
                         {
                             "label": "Game",
                             "href": "?api=game"
                         },
                        {
                            "label": "Scene",
                            "href": "?api=scene"
                        },
                        {
                            "separator": true
                        },                        
                        {
                            "label": "Drawable",
                            "href": "?api=drawable"
                        },
                        {
                            "label": "Behaviors",
                            "href": "?api=behaviors"
                        },                        
                        {
                            "separator": true
                        },                        
                        {
                            "label": "Map",
                            "href": "?api=map"
                        },
                         {
                             "separator": true
                         },
                        {
                            "label": "Input",
                            "href": "?api=input"
                        },
                        {
                            "label": "Audio",
                            "href": "?api=audio"
                        },
                        {
                            "label": "Resource",
                            "href": "?api=resource"
                        },
                        {
                            "label": "Notification",
                            "href": "?api=notification"
                        }
                     ]
                 },
                 {
                     "iconClass": "fas fa-code",
                     "label": "Tutorials",
                     "href": "/blah"
                 },
                {
                    "iconClass": "fas fa-gamepad",
                    "label": "AthenaJS Games",
                    "href": "/blah2"
                },
                {
                    "iconClass": "fas fa-github",
                    "label": "GitHub",
                    "href": "https://github.com/AthenaJS/athenajs"
                }
             ]
        }
    },
    "src": [
        {
            "game": "./js/Game/**/*.js"
        },
        {
            "scene": "./js/Scene/**/*.js"
        },
        {
            "drawable": "./js/Drawable/*.js"
        },
        {
            "behaviors": "./js/Drawable/Behavior/*.js"
        },        
        {
            "fx": "./js/FX/**/*.js"
        },
        {
            "map": "./js/Map/**/*.js"
        },
        {
            "input": "./js/Input/**/*.js"
        },
        {
            "audio": "./js/Audio/**/*.js"
        },
        {
            "resource": "./js/Resource/**/*.js"
        },
        {
            "notification": "./js/Notification/**/*.js"
        },
        {
            "util": "./js/Util/**/*.js"
        },
        {
            "home": "README.md"
        }
        ],
    "dest": "./docs"
}